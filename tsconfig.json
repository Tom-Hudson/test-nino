{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist/"
    },
    "exclude": [
        "node_modules",
        "dist/",
        "benchmarks",
        ".github",
        "coverage"
    ]
}